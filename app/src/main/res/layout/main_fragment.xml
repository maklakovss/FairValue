<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment">
    <Button
            android:text="DCF: Discounted Cash Flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnDcf"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/btnDcfDescription"
            android:layout_marginEnd="8dp"/>
    <ImageButton
            android:src="@android:drawable/ic_menu_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDcfDescription"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/btnDcf" app:layout_constraintBottom_toBottomOf="@+id/btnDcf"/>
    <Button
            android:text="DDM: Dividend Discount Model"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnDdm"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnDcf"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/btnDdmDescription"
            android:layout_marginEnd="8dp"/>
    <ImageButton
            android:src="@android:drawable/ic_menu_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDdmDescription"
            app:layout_constraintTop_toTopOf="@+id/btnDdm"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="@+id/btnDdm"/>
    <Button
            android:text="BGF: Benjamin Graham Formula"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnBgf"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnDdm"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/btnBgfDescription"
            android:layout_marginEnd="8dp"/>
    <ImageButton
            android:src="@android:drawable/ic_menu_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBgfDescription"
            app:layout_constraintTop_toTopOf="@+id/btnBgf"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnBgf"/>
</androidx.constraintlayout.widget.ConstraintLayout>
