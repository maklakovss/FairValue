<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment">
    <Button
            android:text="DCF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDcf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnDcfDescription"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:src="@android:drawable/ic_menu_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDcfDescription"
            app:layout_constraintTop_toTopOf="@+id/btnDcf" app:layout_constraintStart_toEndOf="@+id/btnDcf"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="DDM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDdm"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnDcf"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnDdmDescription"/>
    <ImageButton
            android:src="@android:drawable/ic_menu_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDdmDescription"
            app:layout_constraintTop_toTopOf="@+id/btnDdm" app:layout_constraintStart_toEndOf="@+id/btnDdm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="BGF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBgf"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnDdm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnBgfDescription"/>
    <ImageButton
            android:src="@android:drawable/ic_menu_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBgfDescription"
            app:layout_constraintTop_toTopOf="@+id/btnBgf" app:layout_constraintStart_toEndOf="@+id/btnBgf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>
