<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment"
        android:background="#eeeeee">

    <TextView
            android:text="@string/choose_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
            android:id="@+id/btnDcf"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/text_view_border"
            android:gravity="center_vertical"
            android:text="@string/dcf_discounted_cash_flow"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="@dimen/large_label_size"
            app:layout_constraintBottom_toBottomOf="@+id/btnDcfDescription"
            app:layout_constraintEnd_toStartOf="@+id/btnDcfDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnDcfDescription" />

    <ImageView
            android:id="@+id/btnDcfDescription"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/text_view_border"
            android:src="@drawable/ic_help_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
            android:id="@+id/btnDdm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/text_view_border"
            android:gravity="center_vertical"
            android:text="@string/ddm_dividend_discount_model"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="@dimen/large_label_size"
            app:layout_constraintBottom_toBottomOf="@+id/btnDdmDescription"
            app:layout_constraintEnd_toStartOf="@+id/btnDdmDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnDdmDescription" />

    <ImageView
            android:id="@+id/btnDdmDescription"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/text_view_border"
            android:src="@drawable/ic_help_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDcfDescription" />

    <TextView
            android:id="@+id/btnBgf"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/text_view_border"
            android:gravity="center_vertical"
            android:text="@string/bgf_benjamin_graham_formula"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="@dimen/large_label_size"
            app:layout_constraintBottom_toBottomOf="@+id/btnBgfDescription"
            app:layout_constraintEnd_toStartOf="@+id/btnBgfDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnBgfDescription" />

    <ImageView
            android:id="@+id/btnBgfDescription"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/text_view_border"
            android:src="@drawable/ic_help_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDdmDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
