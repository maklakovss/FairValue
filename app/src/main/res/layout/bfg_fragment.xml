<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.ap.fairvalue.ui.utils.DoubleConverter"/>
        <variable name="model" type="com.ap.fairvalue.ui.bfg.BfgViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.bfg.BfgFragment">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earning Per Share"
                app:layout_constraintBaseline_toBaselineOf="@+id/etBfgEarlingPerShare"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <EditText
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/etBfgEarlingPerShare"
                app:layout_constraintEnd_toEndOf="@+id/etBfgGrowthRate"
                android:layout_marginTop="8dp"
                android:text="@={DoubleConverter.doubleToString(model.earlingPerShare)}"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Grown Rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                app:layout_constraintBaseline_toBaselineOf="@+id/etBfgGrowthRate"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <EditText
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/etBfgGrowthRate"
                app:layout_constraintEnd_toStartOf="@+id/textView12"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="@={DoubleConverter.doubleToString(model.growthRate)}"
                app:layout_constraintTop_toBottomOf="@+id/etBfgEarlingPerShare"/>
        <TextView
                android:text="%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/etBfgGrowthRate"/>
        <TextView
                android:text="FairValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                app:layout_constraintBaseline_toBaselineOf="@+id/etBfgFairValue"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <EditText
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/etBfgFairValue"
                app:layout_constraintEnd_toEndOf="@+id/etBfgGrowthRate"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/etBfgGrowthRate"
                android:text="@={DoubleConverter.doubleToString(model.fairValue)}"
                android:enabled="false"/>
        <Button
                android:text="Calc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDcfCalc"
                android:onClick="@{()->model.calc()}"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/etBfgFairValue"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>