<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		tools:context=".ui.dcf.DcfFragment">

	<data>
		<import type="com.ap.fairvalue.ui.utils.DoubleConverter"/>
		<import type="com.ap.fairvalue.ui.utils.IntConverter"/>
		<variable name="model" type="com.ap.fairvalue.ui.ddm.DdmViewModel"/>
	</data>

	<ScrollView android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="#eeeeee">

		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

			<TextView
					android:text="@string/enter_data"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/textView111"
					android:textAppearance="@style/TextAppearance.AppCompat.Body1"
					app:layout_constraintTop_toTopOf="parent"
					android:layout_marginTop="16dp"
					android:layout_marginEnd="8dp"
					app:layout_constraintEnd_toEndOf="parent"
					android:layout_marginStart="8dp"
					app:layout_constraintStart_toStartOf="parent"/>

			<androidx.cardview.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/cardView11"
					app:cardCornerRadius="8dp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					android:layout_marginEnd="8dp"
					android:layout_marginStart="8dp"
					android:layout_marginTop="16dp"
					app:layout_constraintTop_toBottomOf="@+id/textView111">

				<androidx.constraintlayout.widget.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="100dp">

					<TextView
							android:text="@string/divident_per_share"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/textView"
							android:textAppearance="@style/TextAppearance.AppCompat.Body2"
							app:layout_constraintStart_toStartOf="parent"
							android:layout_marginStart="8dp"
							app:layout_constraintBaseline_toBaselineOf="@+id/etDdmDividentPerShare"/>

					<EditText
							android:layout_width="70dp"
							android:layout_height="wrap_content"
							android:inputType="numberDecimal"
							android:ems="10"
							android:id="@+id/etDdmDividentPerShare"
							android:text="@={DoubleConverter.doubleToString(model.dividentPerShare)}"
							app:layout_constraintEnd_toEndOf="parent"
							android:layout_marginEnd="8dp"
							app:layout_constraintTop_toTopOf="parent"
							android:layout_marginTop="8dp"
							android:layout_marginBottom="8dp"
							app:layout_constraintBottom_toBottomOf="parent"/>

				</androidx.constraintlayout.widget.ConstraintLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/cardView12"
					app:cardCornerRadius="8dp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toBottomOf="@id/cardView11"
					android:layout_marginTop="16dp"
					android:layout_marginStart="8dp"
					android:layout_marginEnd="8dp">

				<androidx.constraintlayout.widget.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="100dp">

					<TextView
							android:text="@string/growth_rate"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/textView2"
							android:textAppearance="@style/TextAppearance.AppCompat.Body2"
							app:layout_constraintBaseline_toBaselineOf="@+id/etDdmCrownRate5"
							app:layout_constraintStart_toStartOf="parent"
							android:layout_marginStart="8dp"/>

					<TextView
							android:text="@string/label_1_5_years"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/textView3"
							android:textAppearance="@style/TextAppearance.AppCompat.Body1"
							app:layout_constraintEnd_toEndOf="@+id/etDdmCrownRate5"
							app:layout_constraintStart_toStartOf="@+id/etDdmCrownRate5"
							app:layout_constraintBaseline_toBaselineOf="@+id/textView4"/>

					<EditText
							android:layout_width="70dp"
							android:layout_height="wrap_content"
							android:inputType="numberDecimal"
							android:ems="10"
							android:id="@+id/etDdmCrownRate5"
							android:text="@={DoubleConverter.doubleToString(model.growthRate5)}"
							app:layout_constraintBaseline_toBaselineOf="@+id/etDdmCrownRate10"
							app:layout_constraintEnd_toStartOf="@+id/textView6"
							android:layout_marginEnd="8dp"/>

					<TextView
							android:text="@string/percent"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/textView6"
							app:layout_constraintEnd_toStartOf="@+id/etDdmCrownRate10"
							android:layout_marginEnd="8dp"
							app:layout_constraintBaseline_toBaselineOf="@+id/etDdmCrownRate5"/>

					<TextView
							android:text="@string/label_6_10_years"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/textView4"
							android:textAppearance="@style/TextAppearance.AppCompat.Body1"
							app:layout_constraintEnd_toEndOf="@+id/etDdmCrownRate10"
							app:layout_constraintStart_toStartOf="@+id/etDdmCrownRate10"
							app:layout_constraintBaseline_toBaselineOf="@+id/textView5"/>

					<EditText
							android:layout_width="70dp"
							android:layout_height="wrap_content"
							android:inputType="numberDecimal"
							android:ems="10"
							android:id="@+id/etDdmCrownRate10"
							android:text="@={DoubleConverter.doubleToString(model.growthRate10)}"
							app:layout_constraintBaseline_toBaselineOf="@+id/etDdmCrownRate11"
							app:layout_constraintEnd_toStartOf="@+id/textView13"
							android:layout_marginEnd="8dp"/>

					<TextView
							android:text="@string/percent"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/textView13"
							app:layout_constraintBaseline_toBaselineOf="@+id/etDdmCrownRate10"
							app:layout_constraintEnd_toStartOf="@+id/etDdmCrownRate11"
							android:layout_marginEnd="8dp"/>

					<TextView
							android:text="@string/label_11_years"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/textView5"
							android:textAppearance="@style/TextAppearance.AppCompat.Body1"
							app:layout_constraintTop_toTopOf="parent"
							android:layout_marginTop="8dp"
							app:layout_constraintEnd_toEndOf="@+id/etDdmCrownRate11"
							app:layout_constraintStart_toStartOf="@+id/etDdmCrownRate11"
							app:layout_constraintHorizontal_bias="0.5"
							app:layout_constraintBottom_toTopOf="@+id/etDdmCrownRate11"/>

					<EditText
							android:layout_width="70dp"
							android:layout_height="wrap_content"
							android:inputType="numberDecimal"
							android:ems="10"
							android:id="@+id/etDdmCrownRate11"
							android:text="@={DoubleConverter.doubleToString(model.growthRate11)}"
							app:layout_constraintTop_toBottomOf="@+id/textView5"
							app:layout_constraintEnd_toStartOf="@+id/textView17"
							android:layout_marginEnd="8dp"
							app:layout_constraintBottom_toBottomOf="parent"
							android:layout_marginBottom="8dp"
							android:layout_marginTop="8dp"/>

					<TextView
							android:text="@string/percent"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/textView17"
							app:layout_constraintEnd_toEndOf="parent"
							android:layout_marginEnd="8dp"
							app:layout_constraintBaseline_toBaselineOf="@+id/etDdmCrownRate11"/>

				</androidx.constraintlayout.widget.ConstraintLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/cardView13"
					app:cardCornerRadius="8dp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toBottomOf="@id/cardView12"
					android:layout_marginTop="16dp"
					android:layout_marginStart="8dp"
					android:layout_marginEnd="8dp">

				<androidx.constraintlayout.widget.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="100dp">

					<TextView
							android:text="@string/discount_rate"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/textView8"
							android:textAppearance="@style/TextAppearance.AppCompat.Body2"
							app:layout_constraintStart_toStartOf="parent"
							android:layout_marginStart="8dp"
							app:layout_constraintBaseline_toBaselineOf="@+id/etDdmDiscountRate"/>

					<EditText
							android:layout_width="70dp"
							android:layout_height="wrap_content"
							android:inputType="numberDecimal"
							android:ems="10"
							android:id="@+id/etDdmDiscountRate"
							android:text="@={DoubleConverter.doubleToString(model.discountRate)}"
							app:layout_constraintEnd_toEndOf="parent"
							android:layout_marginEnd="8dp"
							app:layout_constraintTop_toTopOf="parent"
							android:layout_marginTop="8dp"
							android:layout_marginBottom="8dp"
							app:layout_constraintBottom_toBottomOf="parent"/>

				</androidx.constraintlayout.widget.ConstraintLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/cardView14"
					app:cardCornerRadius="8dp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@id/cardView13"
					android:layout_marginTop="16dp"
					android:layout_marginStart="8dp"
					android:layout_marginEnd="8dp">

				<androidx.constraintlayout.widget.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="100dp">

					<TextView
							android:text="@string/fair_value"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/textView9"
							android:textAppearance="@style/TextAppearance.AppCompat.Body2"
							app:layout_constraintStart_toStartOf="parent"
							android:layout_marginStart="8dp"
							app:layout_constraintBaseline_toBaselineOf="@+id/etDdmFairValue"/>

					<EditText
							android:layout_width="70dp"
							android:layout_height="wrap_content"
							android:inputType="numberDecimal"
							android:ems="10"
							android:id="@+id/etDdmFairValue"
							android:text="@={IntConverter.intToString(model.fairValue)}"
							android:enabled="false"
							android:textColor="@android:color/holo_red_dark"
							app:layout_constraintEnd_toEndOf="parent"
							android:layout_marginEnd="8dp"
							app:layout_constraintTop_toTopOf="parent"
							android:layout_marginTop="8dp"
							android:layout_marginBottom="8dp"
							app:layout_constraintBottom_toBottomOf="parent"/>

				</androidx.constraintlayout.widget.ConstraintLayout>

			</androidx.cardview.widget.CardView>

			<Button
					android:text="@string/calculate"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/btnDdmCalc"
					android:onClick="@{()->model.calc()}"
					app:layout_constraintTop_toBottomOf="@id/cardView14"
					android:layout_marginEnd="146dp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					android:layout_marginStart="155dp"
					android:layout_marginTop="16dp"
					app:layout_constraintBottom_toBottomOf="parent"
					android:layout_marginBottom="16dp"/>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</ScrollView>

</layout>